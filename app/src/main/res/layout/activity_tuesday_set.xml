<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TuesdaySet">

    <CheckBox
        android:id="@+id/CB10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CB11"
        android:layout_alignStart="@+id/CB11" />

    <CheckBox
        android:id="@+id/CB11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CB12"
        android:layout_alignStart="@+id/CB9" />

    <CheckBox
        android:id="@+id/CB12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CB1_30"
        android:layout_alignStart="@+id/CB10_30" />

    <CheckBox
        android:id="@+id/CB1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/CB10"
        android:layout_centerVertical="true" />

    <CheckBox
        android:id="@+id/CB2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/CB10"
        android:layout_alignTop="@+id/CB2_30" />

    <CheckBox
        android:id="@+id/CB3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/CB10"
        android:layout_alignTop="@+id/CB3_30" />

    <CheckBox
        android:id="@+id/CB4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/CB10"
        android:layout_alignTop="@+id/CB4_30" />

    <CheckBox
        android:id="@+id/CB5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/CB10"
        android:layout_alignTop="@+id/CB5_30" />

    <CheckBox
        android:id="@+id/CB6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/CB11"
        android:layout_alignTop="@+id/CB6_30" />

    <CheckBox
        android:id="@+id/CB10_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/CB1_30"
        android:layout_alignTop="@+id/CB10" />

    <CheckBox
        android:id="@+id/CB12_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/CB11"
        android:layout_alignTop="@+id/CB12" />

    <CheckBox
        android:id="@+id/CB1_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/CB2_30"
        android:layout_centerVertical="true" />


    <CheckBox
        android:id="@+id/CB2_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/CB3_30"
        android:layout_marginBottom="204dp" />

    <CheckBox
        android:id="@+id/CB3_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/CB4_30"
        android:layout_marginBottom="162dp" />

    <CheckBox
        android:id="@+id/CB4_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/CB5_30"
        android:layout_marginBottom="115dp" />

    <CheckBox
        android:id="@+id/CB5_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/CB6_30"
        android:layout_marginBottom="71dp" />

    <CheckBox
        android:id="@+id/CB6_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="22dp" />

    <CheckBox
        android:id="@+id/CB9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CB10"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="73dp" />

    <CheckBox
        android:id="@+id/CB11_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/CB12"
        android:layout_below="@+id/CB10" />


    <CheckBox
        android:id="@+id/CB9_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/CB10_30"
        android:layout_alignTop="@+id/CB9" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/weekday_spinner"
        android:onClick="SubmitShed"
        android:text="Submit" />

    <Spinner
        android:id="@+id/weekday_spinner"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/mon_go_btn"
        android:layout_width="86dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/CB12"
        android:onClick="Go"
        android:text="Go" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="140dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/CB9"
        android:layout_marginStart="22dp"
        android:text="Click boxes for when you are available, leave unmarked if you are available" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/CB9"
        android:layout_toEndOf="@+id/weekday_spinner"
        android:text="9" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/CB10"
        android:layout_alignTop="@+id/textView5"
        android:text="First Half" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:text="Second Half" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/CB10"
        android:layout_toStartOf="@+id/mon_go_btn"
        android:text="10" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CB10"
        android:layout_toStartOf="@+id/mon_go_btn"
        android:text="11" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CB11"
        android:layout_toStartOf="@+id/mon_go_btn"
        android:text="12" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/mon_go_btn"
        android:text="1" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/CB2"
        android:layout_toEndOf="@+id/weekday_spinner"
        android:text="2" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/CB3"
        android:layout_toEndOf="@+id/weekday_spinner"
        android:text="3" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/CB4"
        android:layout_toStartOf="@+id/mon_go_btn"
        android:text="4" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/CB5"
        android:layout_toEndOf="@+id/weekday_spinner"
        android:text="5" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/CB6"
        android:layout_toEndOf="@+id/weekday_spinner"
        android:text="6" />



</RelativeLayout>